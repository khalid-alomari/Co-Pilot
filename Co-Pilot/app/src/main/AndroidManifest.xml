<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.khalid.CoPilot">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.NFC" />
    <uses-feature android:name="android.hardware.nfc" android:required="true" />


    <application
        android:name="com.example.khalid.CoPilot.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.example.khalid.CoPilot.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.khalid.CoPilot.Main2Activity" />
        <activity android:name="com.example.khalid.CoPilot.ForgetPassword"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name="com.example.khalid.CoPilot.nfcActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name="com.example.khalid.CoPilot.SignUP"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.example.khalid.CoPilot.MainPageActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".StuEntFragment$StuEntFragment"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.example.khalid.CoPilot.SN"
            android:label="@string/title_activity_sn"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name="com.example.khalid.CoPilot.AbsenceActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"></activity>
        <activity android:name="com.example.khalid.CoPilot.TimeActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>